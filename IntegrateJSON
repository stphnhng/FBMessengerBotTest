CREATE TABLE restaurants (
    id integer NOT NULL,
    name varchar(50) NOT NULL
);

CREATE TABLE menu (
    res_id integer NOT NULL,
    item_id integer NOT NULL,
    name varchar(50) NOT NULL,
    category integer NOT NULL,
    price double precision
);

